<script type="text/javascript">
jQuery.noConflict();
(function( $ ) {
    $(function() {

        function setProductSlide() {
            $('.product-slide .bxslider').bxSlider();
        }

        function setDefaultMatsSize(size) {
            $(`.size-border[data-size="${size}"]`).addClass('active');
            $(`.mats-size .size-image[data-size="${size}"]`).show();
        }

        function handleClickSize() {
            $('.mats-size .size-border').click(function() {
                $('.mats-size .size-border').removeClass('active');
                $(this).addClass('active');

                const size = $(this).data('size');
                $('.mats-size .size-image').hide();
                $(`.mats-size .size-image[data-size="${size}"]`).show();
            });
        }

        

        function initMatsSize() {
            setDefaultMatsSize('3');
            handleClickSize();
        }

        function init() {
            setProductSlide();
            initMatsSize();
        }

        init();
            
    });
})(jQuery);
</script>
